<%- include('../partials/header')  -%>

<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-end justify-content-center text-center">
            <div class="col-lg-7">
                <h2 class="mb-0">Edit Course</h2>
                <p>Edit course of the Academics family!</p>
            </div>
        </div>
    </div>
</div>

<div class="custom-breadcrumns border-bottom">
    <div class="container">
        <a href="/">Home</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">Edit Course</span>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <form action="/courses/<%= course._id %>?_method=PUT" method="post">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="topic">Topic</label>
                            <input type="text" id="topic" name="course[topic]" value="<%= course.topic %>" class="form-control form-control-lg">
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="title">Title</label>
                            <input type="text" id="title" name="course[title]" value="<%= course.title %>" class="form-control form-control-lg">
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="image">Image</label>
                            <input type="text" id="image" name="course[image]" value="<%= course.image %>" class="form-control form-control-lg">
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="price">Price</label>
                            <input type="number" id="price" name="course[price]" value="<%= course.price %>" class="form-control form-control-lg">
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="description">Description</label>
                            <input type="text" id="description" name="course[description]" value="<%= course.description %>" class="form-control form-control-lg">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <input type="submit" value="Submit" class="btn btn-primary btn-lg px-5">
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

<%- include('../partials/footer')  -%>
